{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>{{movie.title}}</h2>
        <h4>Genre: {{movie.genre}}</h4>
        <h4>Director: {{movie.director}}</h4>
        <h4>
            {% if movie.favorite %}
                favorited
            {% else %}
            {%endif%}
        </h4>
        {% if movie.owner == userId %}
        <div class="btn-group">
            <a href="/movies/edit/{{movie.id}}" class="btn btn-primary">Edit {{movie.title}}</a>
            <form action="/movies/{{movie.id}}?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger" value="Delete {{movie.title}}">
            </form>
        </div>
        {% endif %}
    </article>
    <hr>
    <h4>comments</h4>
    <hr>
    {% if loggedIn %}
            <div class="col-md-6">
                <form action="/comments/{{ movie.id }}" method="POST">
                    <fieldset>
                        <legend>Add Comment</legend>
                        <label class="form-label">comment: </label>
                        <input type="text" name="note" class="form-control mb-1">
                    </fieldset>
                    <input type="submit" class="btn btn-success" value="add comment">
                </form>
            </div>
        {% else %}
            <div class="col-md-6">
                <small>To leave a comment, please log in...</small>
            </div>
        {% endif %}
        <hr>
        {% if movie.comments.length > 0 %}
            <div class="container-sm justify-content-center">
                {% for comm in movie.comments %}
                    {% render '../comment.liquid', comm: comm, userId: userId, movie: movie %}
                {% endfor %}
            </div>
        {% else %}
            <small>no comments yet...</small>
        {% endif %}
</div>
{% endblock %}