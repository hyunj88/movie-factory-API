{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Movies</h2>
    <div class="row">
        {% for movie in movies %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ movie.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Favorite: {{ movie.favorite }}
                </h5>
                <p class="card-text">
                    Genre: {{ movie.genre }}
                </p>
                <p class="card-text">
                    Director: {{ movie.director }}
                </p>
                <a href="/movies/{{ movie.id }}" class="btn btn-info">
                    View {{ movie.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}